.jws-loading-box {
  padding: 30rpx 0;
  width: 100%;
  display: flex;
  justify-content: center;
}

.jws-loading {
  display: flex;
  align-items: center;
}

.jws-loading .loading-line {
  width: 160rpx;
  border-bottom: 1px solid rgba(204, 204, 204, 0.5);
}

.jws-loading .loading-txt {
  padding: 0 30rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(204, 204, 204, 0.8);
  display: flex;
  align-items: center;
}

