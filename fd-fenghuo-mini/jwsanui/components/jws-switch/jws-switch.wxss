.jws-switch {
  width: 96rpx;
  height: 56rpx;
  background: var(--grey);
  border-radius: 62rpx;
  border: 3rpx solid rgba(229, 229, 229, 1);
  overflow: hidden;
}

.jws-switch .jws-switch-btn {
  position: absolute;
  z-index: 9;
  border-radius: 50%;
  width: 50rpx;
  height: 50rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: -2rpx 4rpx 4rpx 0px rgba(0, 0, 0, 0.1),
                0px 4rpx 22rpx 0px rgba(0, 0, 0, 0.08),
                0px 0px 4rpx 0px rgba(0, 0, 0, 0.2);
}

.jws-switch .jws-switch-cheched {
  position: absolute;
  z-index: 8;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: var(--cyan);
}

.jws-toright {
  animation: jws-slide-left 1s;
  right: 0;
}

.jws-toleft {
  animation: jws-slide-right 1s;
  left: 0;
}

.jws-show{
  animation: jws-show 1s;
  opacity: 1;
}

.jws-hide{
  animation: jws-hide 1s;
  opacity: 0;
}