.jws-form-item {
  width: 100%;
  min-width: 100%;
  max-width: 100%;
  background: rgba(255, 255, 255, 1);
  border-top: 1rpx solid #f4f4f4;
  padding: 30rpx 15rpx;
}

.jws-form-item .jws-form-item-title {
  min-width: 200rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(26, 26, 26, 1);
  margin-right: 5rpx;
}

.jws-form-item .jws-form-item-title .required {
  padding: 5rpx 0 0 0;
  margin: 0;
  border: 0;
  color: #ff4f4c;
  max-width: 20rpx;
  min-width: 20rpx;
  position: relative;
  height: 44rpx;
  line-height: 44rpx;
}

.weight {
  font-weight: 500;
}

.jws-form-item .jws-form-item-title .jws-form-item-icon {
  min-width: 12rpx;
  height: 32rpx;
  margin: 0 5rpx;
}

.jws-form-item .jws-form-item-title .jws-form-item-icon image{
  height: 10rpx;
  width:  10rpx
}

.jws-form-item .jws-form-item-box {
  width: 60%;
  position: relative;
}

.jws-ml20-mt20{
  margin-top: 20rpx;
  margin-left: 20rpx;
}